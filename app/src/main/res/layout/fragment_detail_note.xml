<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <!-- Campo de texto para el título -->
    <EditText
        android:id="@+id/editNoteTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Título de la nota"
        android:textSize="18sp"
        android:textColor="@android:color/black"
        android:textColorHint="@android:color/darker_gray"
        android:background="@android:drawable/edit_text"
        android:padding="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <EditText
        android:id="@+id/editNoteContent"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:hint="Contenido de la nota"
        android:textSize="16sp"
        android:textColor="@android:color/black"
        android:textColorHint="@android:color/darker_gray"
        android:background="@android:drawable/edit_text"
        android:padding="8dp"
        android:gravity="start|top"
        android:inputType="textMultiLine"
        android:minHeight="200dp"
        app:layout_constraintTop_toBottomOf="@id/editNoteTitle"
        app:layout_constraintBottom_toTopOf="@id/saveNoteButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/saveNoteButton"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:text="Guardar"
        android:textAllCaps="false"
        android:textSize="14sp"
        android:backgroundTint="?attr/colorPrimary"
        android:textColor="@android:color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/cancelNoteButton" />

    <Button
        android:id="@+id/cancelNoteButton"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:text="Cancelar"
        android:textAllCaps="false"
        android:textSize="14sp"
        android:backgroundTint="@android:color/darker_gray"
        android:textColor="@android:color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/saveNoteButton" />

</androidx.constraintlayout.widget.ConstraintLayout>
